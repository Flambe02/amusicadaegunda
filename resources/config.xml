<?xml version='1.0' encoding='utf-8'?>
<widget id="com.tonorg.musicadasegunda" version="2.0.0" xmlns="http://www.w3.org/ns/widgets">
    <name>Música da Segunda</name>
    <description>Descubra uma nova música incrível toda segunda-feira</description>
    <author email="dev@tonorg.com" href="https://amusicadasegunda.com">
        Música da Segunda Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="22" />
    <preference name="android-targetSdkVersion" value="33" />
</widget>
